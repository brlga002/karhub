{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "0-core/*": [
        "src/0-core/*"
      ],
      "1-domain/*": [
        "src/1-domain/*"
      ],
      "2-application/*": [
        "src/2-application/*"
      ],
      "3-interfaces/*": [
        "src/3-interfaces/*"
      ],
      "4-framework/*": [
        "src/4-framework/*"
      ],
      "@ioc/*": [
        "src/4-framework/ioc/*"
      ],
      "@test/*": [
        "test/*"
      ]
    },
  }
}